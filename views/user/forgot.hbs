<div class="container signin-page">
	<div class="row">
	<div class="alert alert-danger {{#if noErrorMsg}}hidden{{/if}}">
		{{errorMsg}}
	</div>
	<div class="alert alert-success {{#if noMessage}}hidden{{/if}}">
		{{successMsg}}
	</div>
		<div class="col-md-4 col-md-offset-4">
			<h1>Forgot Password</h1>
			<form action="/user/forgot" method="POST">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="text" id="email" name="email" class="form-control">
				</div>
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
				<button class="btn btn-default" type="submit">Reset Password</button>
			</form>
			<p>Need an account? <a href="/user/signup">Sign Up</a></p>
		</div>
	</div>

</div>