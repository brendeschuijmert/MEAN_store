</nav>
<div id="charge-error" class="alert alert-danger {{#if noErrorMsg}}hidden{{/if}}">
			{{errorMsg}}
</div>
<div id="charge-success" class="alert alert-success {{#if noMessage}}hidden{{/if}}">
			{{successMsg}}
</div>
<div class="container signin-page">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h1>Reset Password</h1>
			{{#if hasErrors }}
			<div class="alert alert-danger">
				{{# each message }}
				<p>{{this}}</p>
				{{/each}}
			</div>
			{{/if}}
			<form action="/user/reset/{{token}}" method="POST">
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control">
				</div>
				<div class="form-group">
					<label for="confirm">Confirm Password</label>
					<input type="password" id="confirm" name="confirm" class="form-control">
				</div>
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
				<button class="btn btn-default" type="submit">Update Password</button>
			</form>
		</div>
	</div>
</div>