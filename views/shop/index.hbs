{{# each products }}
	<div class="row">
		{{# each this }}
		  	<div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			      	<img class="img-responsive" src="{{ this.imagePath }}" alt="...">
			        <div class="caption">
				        <h3>{{ this.title }}</h3>
				        <p class="description">{{ this.description }}</p>
				        <div class="clearfix">
				        	{{#if this.isVariable }}
				        		<div class="price pull-left">
				        			<form action='add-to-cart' method='POST'>
				        				<input type='hidden' id='id' name='id' value='{{ this._id }}'>
				        				<div class="form-group">
					        				<label for="price" class="">Amount of Donation:</label>
					        				<div class="input-group pull-left">
	  											<span class="input-group-addon">$</span>
											  	<input type="text" id="price" name="price" class="form-control input-sm text-right" placeholder="price">
											</div>
											<div class="text-right">
								        	<input id="button" type='submit' value='Add to Cart' class="btn btn-success pull-right" role="button">
								        	</div>
										</div>
				        			</form>
				        		</div>
				        	{{else}}
				        		{{#if this.isApparel }}
				        			<div class="price pull-left">
					        			<form action='add-to-cart' method='POST'>
					        				<div class="form-group">

					        				<input type='hidden' id='id' name='id' value='{{ this._id }}'>
					        				<input type='hidden' id='price' name='price' value='{{ this.price }}'>
											<select name="size">
							        			{{#each this.options}}
							        				<option name="{{value}}">{{name}}</option>
							        			{{/each}}
							        		</select>				 
							        		<div class="price pull-left">${{ this.price }}</div>
								        	<input type='submit' value='Add to Cart' class="btn btn-success pull-right" role="button">
											</div>
					        			</form>
				        			</div>
					        	{{else}}
							        <div class="price pull-left">${{ this.price }}</div>
							        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
				        		{{/if}}
				        	{{/if}}
					    </div>
	      			</div>
	    		</div>
  			</div>
  		{{/each}}
	</div>
{{/each}}