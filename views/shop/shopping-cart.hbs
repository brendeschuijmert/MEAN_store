<div class="container">
    <div class="row">
<div class="col-md-12">
		{{#if products}}
		<div id="charge-error" class="alert alert-danger {{#if noErrorMsg}}hidden{{/if}}">
			{{errorMsg}}
		</div>
		<div id="charge-success" class="alert alert-success {{#if noMessage}}hidden{{/if}}">
			{{successMsg}}
		</div>
		<ol class="breadcrumb">
			<li><a href="/">Home</a></li>
			<li>Shopping Cart</li>
		</ol>
		<div class="row">
			<div class="col-sm-3 col-md-3">
				{{>recommendation}}
			</div>
			<div class="col-sm-9 col-md-9">
				<div class="panel-heading"><h3>Items in Cart</h3></div>
				<div class="panel-body">
					<div class="table-responsive">
						{{!-- 				<form action="/create" method="post">
							--}}				<form action="/checkout" method="post">
								<div class="panel-body">
									<div class="clearfix"></div>
									<!-- Text input-->
									<input type="hidden" name="cmd" value="_cart">
									<input type="hidden" name="business" value="assistant@sepennaa.org">
									<input type="hidden" name="currency_code" value="USD">
									<input type="hidden" name="return" value="http://roundup.aasepia.org/complete">
									<input type="hidden" name="cancel_return" value="http://aasepia.org/cancel">
									<input type="hidden" name="cn" value="2017 SEPIA ROUNDUP">
									<input type="hidden" name="no_shipping" value="1">
									<input type="hidden" name="rm" value="2"> <!-- the buyer's browser is redirected to the return url using POST -->
									<!-- Text input-->
								</div>
								<table class="table table-condensed">
									<thead>
										<tr>
											<td><strong>ITEM</strong></td>
											<td><strong>QTY</STRONG></td>
											<td class='text-right'><strong>PRICE</strong></td>
											<td class='text-right'><strong>TOTAL</strong></td>
											<td>&nbsp;</td>
										</tr>
									</thead>
									<tbody>
										<input type="hidden" name="upload" value="1">
										{{# each products }}
										<input type="hidden" name="item_name_{{inc @index }}" value="{{this.item.title}}">
										<input type="hidden" name="item_number_{{inc @index }}" value="{{this.item._id}}">
										<input type="hidden" name="amount_{{inc @index }}" value="{{this.price}}">
										<input type="hidden" name="amount_{{inc @index }}" value="{{this.totalTax}}">
										<input type="hidden" name="itemTotal_{{inc @index }}" value="{{this.itemTotal}}">
										<input type="hidden" name="on{{inc @index}}_1" value="Size:{{this.size}}">
										<tr>
											<td>{{this.item.title}}</td>
											<td>{{this.qty}}</td>
											<td class='text-right' text-align="right">${{this.price}}</td>
											<td class='text-right' text-align="right">${{this.itemTotal}}</td>
											<td>
												<div class="btn-group pull-right">
													<button class="btn btn-primary btn-xs dropdown-toggle pull-right" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
													<ul class="dropdown-menu">
														<li><a href="/reduce-qty/{{this.item._id}}">Reduce by 1</a></li>
														<li><a href="/empty-cart">Remove all {{this.item.name}}</a></li>
														<li><a href="/empty-cart">Remove All</a></li>
													</ul>
												</div>
											</td>
										</tr>
										{{/each}}
									</tr>
									<tr>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
										<td>Subtotal: </td>
										<td class='text-right' text-align="right">${{this.totalPrice}}</td>
										<td>&nbsp;</td>
									</tr>
									<tr>
										<td colspan=5>
											<div class="form-group">
										<label class="control-label">First Name</label>
										<label class="control-label">Last Name</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
												<input  name="first_name" placeholder="First Name" class="form-control"  value="{{user.first_name}}" type="text">
												<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
												<input name="last_name" placeholder="Last Name" class="form-control" value="{{user.last_name}}"  type="text">
											</div>
										</div>
									</div>
									<div class="form-group">
										<label class="control-label">E-Mail</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
												<input name="email" placeholder="E-Mail Address" class="form-control"  value="{{user.email}}" type="text">
											</div>
										</div>
									</div>
									<!-- Text input-->
									<div class="form-group">
										<label class="control-label">Phone #</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
												<input name="phone" placeholder="(845)555-1212" class="form-control"  value="{{user.telephone}}" type="text">
											</div>
										</div>
									</div>
									<div class="form-group">
										<h3>Shipping Address</h3>
										<div class="form-group">
										<label class="control-label">Address</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
												<input ng-model="shipping_addr1" name="shipping_addr1" placeholder="Address1" class="form-control" value="{{user.addr1}}" type="text" required>
											</div>
										</div>
									</div>
									<!-- Text input-->
									<div class="form-group">
										<label class="control-label">City</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
												<input ng-model="shipping_city" name="shipping_city" placeholder="city" class="form-control" value="{{user.city}}"  type="text" required>
											</div>
										</div>
									</div>
									<!-- Text input-->
									<div class="form-group">
										<label class="control-label">State</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
												<input ng-model="shipping_state" name="shipping_state" placeholder="PA" class="form-control" value="{{user.state}}" type="text" required>
											</div>
										</div>
										<label class="control-label">Zip</label>
										<div class="inputGroupContainer">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
												<input ng-model="shipping_zip" name="shipping_zip" placeholder="xxxxxx" class="form-control" value="{{user.zipcode}}" type="text" required>
											</div>
										</div>
									</div>
									</div>


										</td>
									</tr>

								</tbody>
							</table>
							<div class="text-right">
								<input type='submit' value='Provide Contact Details and Check Out >' class='btn btn-primary text-right'>
							</div>
							<input type="hidden" name="amount" value="{{grandTotal}}">
							<input type="hidden" name="method" value="paypal">
						</form>
					</div>
					</div> <!--panel body-->
					<div class="row">
						<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
						</div>
					</div>
				</div>
			</div>
			{{else}}
			<div class="row">
				<div class="col-sm-12 col-md-12">
					<h2>No items in Cart</h2>
				</div>
			</div>
			{{/if}}
			{{#if localUser }}
			<h4>Pennsylvania and Philadelphia taxes apply for local residents.</h4>
			{{/if}}
			{{>shipping}}
			</div> <!--col-md-12-->
		</div>